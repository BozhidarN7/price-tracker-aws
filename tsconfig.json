{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2022"],
    "rootDir": ".", // keep TS source here
    "outDir": "dist", // compiled JS output
    "declaration": false, // no need for .d.ts unless publishing a library
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true, // generates .map files (better debugging)
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowImportingTsExtensions": true,
    "noEmit": true, // do not emit JS files (handled by tsc-watch)
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "bin/**/*.ts"], // CDK + source
  "exclude": ["node_modules", "cdk.out", "eslint.config.mts", "dist"]
}
